{
    "name": "webnuvola/laravel-active",
    "description": "Helper functions for Laravel applications to get active class based on current route",
    "keywords": ["laravel", "active", "menu", "current"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Fabio Cagliero",
            "email": "fabio@webnuvola.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/http": "^9.0||^10.0||^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0||^8.0||^9.0",
        "pestphp/pest": "^2.34"
    },
    "autoload": {
        "files": ["src/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Webnuvola\\Laravel\\Active\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "pest"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
